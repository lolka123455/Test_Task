<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_24"
    android:background="@android:color/transparent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/itemPhoneImageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="@dimen/margin_12"
                android:scaleType="center"
                android:src="@drawable/ic_category_phone" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:fontFamily="@font/mark_pro"
                android:text="@string/phone"
                android:textColor="@color/dark_grey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/itemComputerImageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="@dimen/margin_12"
                android:scaleType="center"
                android:src="@drawable/ic_category_computer" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:fontFamily="@font/mark_pro"
                android:text="@string/computer"
                android:textColor="@color/dark_grey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/itemHealthImageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="@dimen/margin_12"
                android:scaleType="center"
                android:src="@drawable/ic_category_health" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:fontFamily="@font/mark_pro"
                android:text="@string/health"
                android:textColor="@color/dark_grey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/itemBooksImageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="@dimen/margin_12"
                android:scaleType="center"
                android:src="@drawable/ic_category_books" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:fontFamily="@font/mark_pro"
                android:text="@string/books"
                android:textColor="@color/dark_grey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/itemUnknownImageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="@dimen/margin_12"
                android:scaleType="center"
                android:src="@drawable/ic_unknown_image" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:fontFamily="@font/mark_pro"
                android:text="@string/unknown"
                android:textColor="@color/dark_grey" />

        </LinearLayout>

    </LinearLayout>

</HorizontalScrollView>