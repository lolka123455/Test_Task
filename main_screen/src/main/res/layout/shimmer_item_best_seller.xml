<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/margin_4"
        android:layout_marginVertical="@dimen/margin_6"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/margin_8"
        app:cardElevation="0dp"
        app:layout_constraintCircleRadius="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="180dp"
                android:layout_height="165dp"
                android:background="@color/shimmer" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_4"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="55dp"
                    android:layout_height="25dp"
                    android:background="@color/shimmer"
                    android:textColor="@color/shimmer"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="35dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="@dimen/margin_8"
                    android:background="@color/shimmer"
                    android:textColor="@color/shimmer"
                    android:textSize="11sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_12"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_marginEnd="@dimen/margin_12"
                android:layout_marginBottom="@dimen/margin_16"
                android:background="@color/shimmer"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/shimmer"
                android:textSize="11sp"
                tools:text="Samsung Galaxy s20 Ultra" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/favouriteButtonFrame"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center|top"
        android:layout_marginStart="60dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/round_shape_white"
        android:padding="5dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/favouriteButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_shape_shimmer" />

    </FrameLayout>

</FrameLayout>
